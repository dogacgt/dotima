[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python $HOME/.config/polybar/spotify_status.py  -p ',' --playpause-font=2 -f '{play_pause} {artist} - {song}'
format-underline = #1db954


